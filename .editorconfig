# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf

[*.yml]
indent_size = 2

[*.html]
indent_size = 2

[*.json]
insert_final_newline = ignore

[**.{min,min.js,min.js.map,min.css,min.css.map}]
indent_style = ignore
insert_final_newline = ignore
